{
	"name": "vscode-autogen-code-checker",
	"displayName": "vscode-autogen-code-checker",
	"description": "Autogen Code Checker supports verification for files including generated code.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/src/extension.js",
	"publisher": "vscode-publisher",
	"repository": {
		"type": "git",
		"url": "https://github.com/jotadrilo/vscode-autogen-code-checker"
	},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Autogen Code Checker",
			"properties": {
				"autogencc.patterns.filename": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"^(\\/\\/|#+)? Code generated( .*)? DO NOT EDIT\\.?$"
					],
					"description": "Patterns to apply to the header of the file in order to identify if the file is auto-generated or not. Default: [`^(\\/\\/|#+)? Code generated( .*)? DO NOT EDIT\\.?$`].",
					"scope": "resource"
				},
				"autogencc.patterns.header": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"generated\\..*"
					],
					"description": "Patterns to apply to the name of the file in order to identify if the file is auto-generated or not. Default: [`generated\\..*`].",
					"scope": "resource"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"@types/fs-extra": "^9.0.2",
		"@types/sinon": "^9.0.8",
		"fs-extra": "^9.0.1",
		"sinon": "^9.2.0"
	}
}
